<!DOCTYPE html>
<html>
<head>
	<!-- load jquery-UI from google -->
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js">
		</script>
	<title>Yisifahan</title>
	<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
	<![endif]-->
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |name, msg| %>
		  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		    <a class="close" data-dismiss="alert">Ã—</a>
		    <%= msg %>
		  </div>
		<% end %>
		<div class="row">
			<div class="span2 remove-margin">
				<%= render "layouts/left_side_bar" %>
			</div>
			<div id ='mainpage' class="span10">
				<%= yield %>
			</div>
		</div>
	</div>
	<br>
	<div class="footer">
		<h5>Copyright &copy; 2012. All rights reserved. </h5>
	</div>
</body>
</html>


		<div id="myCarousel" class="carousel slide">
		  <!-- Carousel items -->
		  <div class="carousel-inner">
				<% @slides.each do |slide| %>
				<%if slide==@slides.first%>
				<div class="active item">
					<p>	<% if slide.image == []%>
						<%= "No Image Found"%>
						<%else%>
						<%= image_tag slide.image, :size => "780x400" %>				
						<% end%>
					</p>
				</div>
					<%else%>
					<div class="item">
						<p>	<% if slide.image == []%>
							<%= "No Image Found"%>
							<%else%>
							<%= image_tag slide.image, :size => "780x400" %>				
							<% end%>
						</p>
					</div>
				<%end%>

				<%end%>
		  </div>
		  <!-- Carousel nav -->
		  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>

				<div id="itemlist">
					<% @items.each do |item| %>
					<div class='item-box span3'>
						<p>	<% if item.images == []%>
							<%= "No Image Found"%>
							<%else%>
							<%= image_tag item.images.first.image_url, :size => "200x200" %>				
							<% end%>
						</p>
						<p><%= link_to item.name, item%></p>
						<p><%if item.description == nil%>
							<%= "No Description Available" %>
							<%else%>
							<%= item.description %>
							<%end%>
						</p>
						<p><%if item.price == nil%>
							<%= "No Price Available" %>
							<%else%>
							<%= number_to_currency item.price %>
							<%end%>
						</p>
					</div>
					<%end%>
				</div>
				

<script>
$(function() {
	$( "input:submit, button" ).button();
});
</script>

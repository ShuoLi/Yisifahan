<h1>Listing messages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.name %></td>
    <td><%= message.email %></td>
    <td><%= message.content %></td>
    <td><%= link_to 'Show', message, :class=>"btn" %></td>
    <td><%= link_to 'Edit', edit_message_path(message), :class=>"btn" %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete, :class=>"btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path, :class=>"btn" %>

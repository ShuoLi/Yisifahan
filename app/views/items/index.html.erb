
	
	<div class="catalog">	

		<div class="span10 remove-margin">	
			<p>
			<div class="pull-left"><i class="icon-home"></i>
				<%if params.has_key?(:cpath)%>
					<i class="icon-chevron-right"></i>
					<%if params[:cpath]=='-1'%>
						<span class='label'>Uncategorized</span>
					<%else%>
						<%@category=Category.find(params[:cpath])%>
					<span class='label'><%=@category.name%></span>
					<%end%>
				<%elsif params.has_key?(:search_text)%>
					<i class="icon-search"></i>
					<span class='label'><%=params[:search_text]%></span>
				<%end%>
			</div>
				
				<div class="btn-group pull-right">
					  <a class="btn dropdown-toggle" data-toggle="dropdown">
					    Sort by
					    <span class="caret"></span>
					  </a>
					  <ul class="dropdown-menu">
						<li>

							<%= link_to 'Most Recent', items_path(:ascend=>1, :cpath=>params[:cpath], :search_text=>params[:search_text], :low=>params[:low], :high=>params[:high]) %>
						</li>					    
					  	<li>
							<%= link_to 'Price: Low to High', items_path(:ascend=>2, :cpath=>params[:cpath], :search_text=>params[:search_text], :low=>params[:low], :high=>params[:high]) %>
					    </li>
					    <li>
							<%= link_to 'Price High to Low', items_path(:ascend=>3, :cpath=>params[:cpath], :search_text=>params[:search_text], :low=>params[:low], :high=>params[:high]) %>
						</li>
					  </ul>					
				</div>
				
				<div class="btn-group pull-right">
				  <a class="btn dropdown-toggle" data-toggle="dropdown">
				    Price Range
				    <span class="caret"></span>
				  </a>
				  <ul class="dropdown-menu">
				    <li><%= link_to "$0.00 - $100.00", items_path(:low=>0, :high=>100, :ascend=>params[:ascend], :cpath=>params[:cpath], :search_text=>params[:search_text])%></li>
				    <li><%= link_to "$100.00 - $250.00", items_path(:low=>100, :high=>250, :ascend=>params[:ascend], :cpath=>params[:cpath], :search_text=>params[:search_text])%></li>
				    <li><%= link_to "$250.00 - $500.00", items_path(:low=>250, :high=>500, :ascend=>params[:ascend], :cpath=>params[:cpath], :search_text=>params[:search_text])%></li>
				    <li><%= link_to "$500.00 - $1000.00", items_path(:low=>500, :high=>1000, :ascend=>params[:ascend], :cpath=>params[:cpath], :search_text=>params[:search_text])%></li>
				    <li><%= link_to "$1000.00+", items_path(:low=>1000, :ascend=>params[:ascend], :cpath=>params[:cpath], :search_text=>params[:search_text])%></li>
				  </ul>
				</div>	
			</p>	
		</div>
		
		<div class="span10 remove-margin">
		<% @items[0,10].each do |item| %>
			<%= render "items/item_box", :item => item %>	
		<%end%>
		</div>
		<div class="pagination span12">
			<ul>
				<%if @numpages > 1%>
					<% (1..@numpages).each do |i|%>
						<%if params.has_key?(:page) and params[:page] == i.to_s%>
							<li class="active">
						<%else%>
							<li>
						<%end%>
							<%if params.has_key?(:cpath)%>
								<%= link_to i.to_s, items_path(:page=>i, :cpath=>params[:cpath])%>
							<%elsif params.has_key?(:search_text)%>
								<%= link_to i.to_s, items_path(:page=>i, :search_text=>[:search_text])%>
							<%elsif params.has_key?(:low) or params.has_key?(:high)%>
								<%= link_to i.to_s, items_path(:page=>i, :low=>params[:low], :high=>params[:high])%>
							<%else%>
								<%= link_to i.to_s, items_path(:page=>i)%>
							<%end%>						
						</li>			
					<%end%>
				<%end%>
			</ul>
		<div>
	</div>


<script>

$(function() {
	$( "input:submit, button" ).button();
});

</script>

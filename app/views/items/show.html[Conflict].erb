	<div class="span12">
		<div class="span7 remove-margin">
			<p>	<% if @current == nil%>
					<%= "No Image Found"%>
				<%else%>
					<%= image_tag @current.image, :size => "532x399" %>				
				<% end%>
			</p>
			<ul class="thumbnails remove-margin">
				<% if @images != [] %>
					<% @images.each do |img|%>
						<%= link_to image_tag(img.image, :size=> "120x90"), item_path(:id=>params[:id], :img_id=>img.id)%>
					<% end %>
				<% end%>
			</ul>
		</div>
		
		<div class="span4">
			<p>
			  <h1><%= @item.name %></h1>
			</p>
			
			<p>
			  <b>Price:</b>
			  <%= number_to_currency @item.price %>
			</p>
			
			<p class="remove-margin">
			  <b>Description:</b>
			  <%= @item.description%>
			</p>
		
			<%= link_to 'Back', items_path, :class=>"btn" %>
			
		</div>
	
	</div>
	<div class="span12">
		<h3>Similar Items:</h3>
		<% @similar[0,5].each do |item| %>
			<%= render "items/item_box", :item => item %>
		<%end%>
	</div>
</div>
<div id='listright'>
	
	<div class="span12">
		<div class="span7 remove-margin">
			
			<div id="curr-img">
				<p>	
					<% if @current == nil%>
						<%= "No Image Found"%>
					<%else%>
						<%= image_tag @current.image, :size => "532x399"%>				
					<% end%>
				</p>
			</div>
			
			<ul class="thumbnails">
				<% if @images != [] %>
					<% @images.each do |img|%>
						<li class="remove-margin sel-img" id=<%= "image" + img.id.to_s%>>
							<%= image_tag img.image, :size=> "120x90"%>
						</li>
					<% end %>
				<% end%>
			</ul>
		</div>
		
		<div class="span4">
			<p>
			  <h1><%= @item.name %></h1>
			</p>
			
			<p>
			  <b>Price:</b>
			  <%= number_to_currency @item.price %>
			</p>
			
			<p class="remove-margin">
			  <b>Description:</b>
			  <%= @item.description%>
			</p>
			
			<p>
			<a data-toggle="modal" href="#buyit" class="btn btn-success">Buy it</a>
			</p>
			
			<div  class="modal hide fade" id="buyit">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">Ã—</button>
					<h3>Buy <%= @item.name%></h3>
				</div>
		
				<div class="modal-body">
					<p>Serial #: <%= text_field_tag :item_code, @item.item_code, :readonly=>true%></p>
					<p>Price: <%= text_field_tag :price, (number_to_currency @item.price), :readonly=>true%></p>
					<p>Phone Number: <%= text_field_tag :phone, (params[:phone])  %></p>
					<p>Email Address: <%= text_field_tag :email, (params[:email])  %></p>
				</div>
		
				<div class="modal-footer">
					<a href="#" class="btn" data-dismiss="modal">Close</a>
					<%= button_to_function "confirm", "confirm()", :id => "follow_button", :class=>"btn btn-primary" %>
				</div>
			</div>
			
			<%= link_to 'Back', items_path, :class=>"btn" %>
			
		</div>
	
	</div>
	<div class="span12">
		<h3>Similar Items:</h3>
		<% @similar[0,5].each do |item| %>
			<%= render "items/item_box", :item => item %>
		<%end%>
	</div>
</div>

<script>
    $('.sel-img').click(function(){
    	var myid = this.id;
        var image_url = document.getElementById(myid).src;
        $('#curr-img').html('<img alt="" src="' + image_url + '" width="532"/>');
    });
</script>